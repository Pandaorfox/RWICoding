#Dice prompt 2
from random import randint
print("Hello! This is a game that rolls three dice with secret results. Your job is to guess the total of the three dice given the values of two of them. That's really all there is to know, so let's go!")
players = int(input("How many people are playing?"))
rounds = int(input("How many rounds would you like to play?"))
#defines a function that rolls the three dice and calculates the total
def roll():
    global die1
    die1 = randint(1,6)
    global die2
    die2 = randint(1,6)
    global die3
    die3 = randint(1,6)
    global total
    total = die1+die2+die3
#for loops to make the game last however many rounds and with however many players
for i in range (0, rounds):
    for i in range (1, (players +1)):
        print("Player %s\'s turn!" %(i))
        roll()
        guess = int(input("The first and second dice are %s and %s respectively. Guess the total: " %(die1, die2)))
        if guess == total:
            print ("You guessed the total correctly! Good job! Be sure to brag to everyone in the room about this.")
        else:
            dif = abs(total-guess)
            print("Your guess was incorrect. The total was %s and you guessed %s, which is %s away from the total. Nice try though!" %(total, guess, dif))
